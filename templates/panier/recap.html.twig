{% extends 'template.html.twig' %}

{% block title %}Confirmation d'achat{% endblock %}
{% block PageTitle %}Achat effectué{% endblock %}

{% block body %}
<div class="container mt-4">

    <h3>Résumé de votre commande</h3>

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Carte</th>
                <th>Quantité</th>
                <th>Prix unitaire</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
        {% for carte in cartes %}
            <tr>
                <td>{{ carte.name }}</td>
                <td>{{ panier[carte.id] }}</td>
                <td>{{ carte.prix }} DT</td>
                <td>{{ (panier[carte.id] * carte.prix)|number_format(2, '.', ' ') }} DT</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">Total général</th>
                <th>{{ totalGlobal|number_format(2, '.', ' ') }} DT</th>
            </tr>
        </tfoot>
    </table>

    <div>
    <a name="acheter"
        class="btn btn-primary"
        href="{{path('panier.acheter')}}"
        role="button"
        >Acheter Maintenant</a>
    </div>
</div>
{% endblock %}
